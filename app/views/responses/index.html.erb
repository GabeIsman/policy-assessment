<p id="notice"><%= notice %></p>

<h1>Listing Responses</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Location</th>
      <th>Assessment ID</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.email %></td>
        <td><%= (response.city || '') + ', ' + (response.state || '') %></td>
        <td><%= response.assessment_id %></td>
        <td><%= link_to 'Show', response %></td>
        <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Response', new_response_path %>
